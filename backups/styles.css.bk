/* --- 1. GLOBAL RESET & BASE STYLES --- */
html, body {
  margin: 0;
  padding: 0;
  width: 100%;
  overflow-x: hidden;
  background-color: #0b0b0b;
  font-family: sans-serif; /* Adds a clean base font */
}

/* Prevents links from turning blue/purple */
a, a:visited, a:active {
    color: inherit;
    text-decoration: none;
}

/* --- 2. HEADER & NAVIGATION --- */
header {
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15px 5%; /* Slightly tighter padding for sticky look */
    
    /* The Fix */
    position: fixed; 
    top: 0;
    left: 0;
    width: 100%;
    z-index: 9999; /* Higher than everything else */
    
    /* Professional 'Buster' Aesthetic */
    background: rgba(0, 0, 0, 0.85); /* 85% solid black */
    backdrop-filter: blur(5px);      /* Blurs content behind the nav */
    border-bottom: 1px solid #333;
}

.logo {
    font-size: 1.8rem;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 4px;
    color: #ff0000;
}

nav a {
    color: #fff !important; /* Force white links */
    margin-left: 20px;
    text-transform: uppercase;
    font-weight: bold;
    font-size: 0.9rem;
    letter-spacing: 1px;
    transition: color 0.3s ease;
}

nav a:hover {
    color: #ff0000 !important;
}

/* --- 3. HERO SECTION (VIDEO & CAPTION) --- */
.hero {
    width: 100%;
    background: #000;
}

.hero video {
    width: 100%;
    height: auto;
    max-height: 80vh; /* Prevents video from taking too much vertical space */
    object-fit: cover;
    display: block;
}

.hero-caption {
    background: #000;
    padding: 60px 20px;
    text-align: center;
    border-bottom: 3px solid #ff0000;
}

.hero-caption h1 {
    color: #ffffff !important;
    font-size: 3rem;
    text-transform: uppercase;
    margin: 0 0 10px 0;
    letter-spacing: 2px;
}

.hero-caption p {
    color: #ffffff !important;
    font-size: 1.2rem;
    margin-bottom: 30px;
}

/* --- 4. SECTION HEADINGS (Buster Style) --- */
h2 {
    color: #fff;
    font-size: 2.5rem;
    text-transform: uppercase;
    letter-spacing: 2px;
    display: table;
    margin: 40px auto;
    text-align: center;
    border-bottom: 3px solid #ff0000;
    padding-bottom: 10px;
}

.epk-section {
    padding: 60px 5%;
    max-width: 1000px;
    margin: 0 auto;
    text-align: center;
    color: #fff;
}

/* --- 5. MUSIC & SPOTIFY FIX --- */
.music-player-container {
    width: 100%;
    max-width: 600px;
    margin: 30px auto;
    height: 352px; /* Correct height for Spotify Player */
    display: block;
}

.music-player-container iframe {
    width: 100% !important;
    height: 100% !important;
    border-radius: 12px;
    border: none;
}

/* --- 6. BUTTONS --- */
.btn, .download-button, button[type="submit"] {
    display: inline-block;
    padding: 14px 32px;
    background-color: #ff0000;
    color: #fff !important;
    text-decoration: none;
    font-weight: bold;
    text-transform: uppercase;
    border: none;
    border-radius: 4px;
    transition: transform 0.2s ease, background 0.4s ease;
    cursor: pointer;
}

.btn:hover, .download-button:hover, button[type="submit"]:hover {
    background-color: #cc0000;
    transform: scale(1.05);
}

/* --- 7. MERCH STICKER --- */
.sticker-sticker {
    max-width: 280px;
    height: auto;
    margin: 20px auto;
    filter: drop-shadow(0 10px 15px rgba(0,0,0,0.8));
    transition: transform 0.4s ease;
}

.sticker-sticker:hover {
    transform: scale(1.1) rotate(5deg);
}

/* --- 8. FORMS (Booking & Signup) --- */
form {
    display: flex;
    flex-direction: column;
    gap: 20px;
    max-width: 600px;
    margin: 0 auto;
    text-align: left;
}

label {
    display: flex;
    flex-direction: column;
    color: #ccc;
    font-weight: bold;
    text-transform: uppercase;
    font-size: 0.8rem;
}

input, textarea {
    margin-top: 8px;
    padding: 15px;
    background: #1a1a1a;
    border: 1px solid #333;
    color: #fff;
    border-radius: 4px;
}

input:focus, textarea:focus {
    border-color: #ff0000;
    outline: none;
}

/* --- 9. FOOTER --- */
footer {
    background-color: #000;
    padding: 60px 20px;
    border-top: 2px solid #ff0000;
    text-align: center;
    color: #ffffff; /* Sets default footer text to white */
}

.social-links {
    display: flex;
    gap: 20px;
    justify-content: center;
    margin: 20px 0;
}

/* Fix: Ensures social icons are white by default and stay white after being clicked */
.social-icon, 
.social-icon:visited, 
.social-icon:active {
    border: 1px solid #333;
    padding: 8px 16px;
    color: #ffffff !important; /* Forces white even if global link rules try to change it */
    transition: all 0.3s ease;
    text-transform: uppercase;
    font-size: 0.9rem;
}

.social-icon:hover {
    color: #ff0000 !important;
    border-color: #ff0000;
}

.footer-contact p, 
.footer-contact a {
    color: #ffffff;
    margin: 10px 0;
}

.footer-contact a:hover {
    color: #ff0000;
    text-decoration: underline;
}

/* Fix: Ensures copyright isn't black-on-black */
.copyright {
    font-size: 0.8rem;
    color: #888888; /* Grey color so it's readable but subtle */
    margin-top: 30px;
    display: block;
}
/* =========================
   MERCH SECTION
========================= */

.merch-list {
  display: flex;
  flex-wrap: wrap;
  gap: 24px;
  justify-content: center;
  margin-top: 30px;
}

.merch-item {
  background: #111;
  border: 1px solid #333;
  border-radius: 8px;
  padding: 16px;
  width: 200px;
  text-align: center;
}

.merch-item img.sticker-sticker {
  max-width: 150px;
  margin-bottom: 10px;
  border-radius: 8px;
}

.merch-name {
  font-weight: bold;
  margin: 8px 0 4px;
}

.merch-price {
  color: #FF4500;
  margin-bottom: 10px;
}

/* Quantity controls */
.quantity-selector {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 6px;
  margin: 10px 0;
}

.qty-btn {
  background: #FF4500;
  border: none;
  color: #fff;
  padding: 4px 10px;
  cursor: pointer;
  border-radius: 4px;
}

.qty-btn:hover {
  background: #cc3700;
}

.qty-input {
  width: 40px;
  text-align: center;
}

/* Size dropdown */
.size-select {
  margin: 6px 0;
  padding: 6px;
  border-radius: 4px;
}

/* Cart */
.cart {
  display: none;
  margin-top: 30px;
  background: #111;
  padding: 20px;
  border-radius: 8px;
  border: 1px solid #333;
  max-width: 500px;
  margin-left: auto;
  margin-right: auto;
}

.cart ul {
  list-style: none;
  padding: 0;
}

.cart li {
  padding: 6px 0;
  border-bottom: 1px solid #333;
}

.cart-total {
  margin-top: 12px;
  font-weight: bold;
}